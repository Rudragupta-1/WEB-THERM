{
    "manifest_version": 3,
    "name": "Weather Extension",
    "version": "1.0",
    "description": "Displays current weather using the OpenWeather API.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": [
      "geolocation",
      "activeTab"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  